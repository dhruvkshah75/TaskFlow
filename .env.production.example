# Production Environment Variables Template
# Copy this to .env.production and fill with your actual secure values

# Database Configuration
POSTGRES_DB=taskflow_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
DATABASE_URL=postgresql://postgres:<CHANGE_ME_STRONG_PASSWORD>@postgres:5432/taskflow_db

# JWT Configuration
SECRET_KEY=<CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Redis Configuration
REDIS_HOST_HIGH=redis_high
REDIS_PORT_HIGH=6379
REDIS_HOST_LOW=redis_low
REDIS_PORT_LOW=6379

# Rate Limiting
RATE_LIMIT_PER_HOUR=1000
USER_RATE_LIMIT_PER_HOUR=500
MAX_FAILED_ATTEMPTS=10
LOCKOUT_DURATION_SECONDS=900
HEARTBEAT_INTERVAL_SECONDS=30

# Optional: Redis passwords (recommended for production)
# REDIS_PASSWORD=<CHANGE_ME_REDIS_PASSWORD>
